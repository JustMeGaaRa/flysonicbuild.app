{
    "extends": "./base.json",
    "compilerOptions": {
        "target": "ESNext",
        "jsx": "react-jsx",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleDetection": "force",
        "moduleResolution": "bundler",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "sourceMap": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true
    },
    "exclude": ["node_modules"]
}
