    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Deno",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/apps/cli",
            "env": {},
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--unstable",
                "--unstable-sloppy-imports",
                "--inspect-wait",
                "--allow-all",
                "main.ts",
                "../../development/build/main.ts",
                "--watch",
                "--out=../../development/build/test_data/result.json"
            ],
            "attachSimplePort": 9229
        }
    ]
}
